# ===================================================
# Application Configuration
# ===================================================
APP_NAME="SSL SaaS Platform"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost
APP_TIMEZONE=UTC
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US
APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# ===================================================
# Logging Configuration
# ===================================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ===================================================
# Database Configuration
# ===================================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=ssl_saas
DB_USERNAME=ssl_saas
DB_PASSWORD=

# ===================================================
# Cache & Session Configuration
# ===================================================
CACHE_STORE=redis
CACHE_PREFIX=ssl_saas
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# ===================================================
# Redis Configuration
# ===================================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ===================================================
# Queue Configuration
# ===================================================
QUEUE_CONNECTION=redis

# ===================================================
# Broadcasting & Filesystem
# ===================================================
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# ===================================================
# Mail Configuration
# ===================================================
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ===================================================
# AWS Configuration (Optional)
# ===================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ===================================================
# Frontend Configuration
# ===================================================
VITE_APP_NAME="${APP_NAME}"

# ===================================================
# Square Payment Configuration
# ===================================================
SQUARE_APPLICATION_ID=
SQUARE_ACCESS_TOKEN=
SQUARE_LOCATION_ID=
SQUARE_WEBHOOK_SECRET=
SQUARE_ENVIRONMENT=sandbox

# ===================================================
# GoGetSSL Provider Configuration
# ===================================================
GOGETSSL_BASE_URL="https://my.gogetssl.com/api"
GOGETSSL_USERNAME=
GOGETSSL_PASSWORD=
GOGETSSL_PARTNER_CODE=
GOGETSSL_SANDBOX=true

# ===================================================
# Google Certificate Manager Configuration
# ===================================================
GOOGLE_CLOUD_PROJECT_ID=
GOOGLE_APPLICATION_CREDENTIALS=

# ===================================================
# SSL Provider Configuration
# ===================================================
SSL_DEFAULT_PROVIDER=gogetssl
SSL_CERTIFICATE_VALIDITY_DAYS=90
SSL_AUTO_RENEWAL_DAYS=30

# ===================================================
# ACME Configuration
# ===================================================
ACME_CONTACT_EMAIL=admin@example.com
ACME_STAGING=true

# ===================================================
# SSL Enhanced Configuration
# ===================================================
SSL_MONITORING_ENABLED=true
SSL_HEALTH_CHECK_INTERVAL=3600
SSL_REDUNDANCY_ENABLED=true
SSL_MAX_RETRY_ATTEMPTS=3
SSL_RETRY_DELAY_SECONDS=60

# Slack Notifications
SLACK_WEBHOOK_URL=
SLACK_SSL_ALERTS_CHANNEL=#ssl-alerts
SLACK_BOT_USER_OAUTH_TOKEN=
SLACK_BOT_USER_DEFAULT_CHANNEL=

# SSL Monitoring Alerts
SSL_ALERT_ON_FAILURE=true
SSL_ALERT_CHANNELS=slack,log
